{
  "manifest_version": 2,

  "name": "BetterFC2Video",
  "description": "This extension make FC2 Video better.",
  "version": "0.1.3",

  // icon
  "icons": {  "16": "bfcv16.png",
              "48": "bfcv48.png",
              "128": "bfcv128.png" },

  "permissions": [
    "storage"
  ],

  // ページで起動するJS
  "content_scripts": [
    {
      "matches": [
        "http://video.fc2.com/*"
      ],
      "js": [
        "lib/jquery-1.11.1.min.js",
        "js/better_search.js"
      ],
      // JSの実行タイミング
      "run_at": "document_end"
    }],

  // option page
  "options_page": "html/options.html"
}