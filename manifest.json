{
  "manifest_version": 2,

  "name": "BetterFC2Video",
  "description": "This extension make FC2 Video better.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://video.fc2.com/a/movie_search.php?*",
        "http://video.fc2.com/movie_search.php?*",
        "http://video.fc2.com/a/member.php?*"
      ],
      "js": [
        "lib/jquery-1.11.1.min.js",
        "js/better_search.js"
      ],
      "run_at": "document_end"
    }]
}